public class pattern1

{
	public static void main(String[] args)
	{
		int rows = 5;
		System.out.println("## Printing the pattern ##");
		for (int i = rows; i >=1; i--) 
                { 
                        for (int j = 1; j <=rows-i; j++)
			{
				System.out.print(" ");
			}
			for (int k = 1; k <= (i * 2) - 1; k++)
			{
				System.out.print("*");
			}
			System.out.println();
		}
	}
}
